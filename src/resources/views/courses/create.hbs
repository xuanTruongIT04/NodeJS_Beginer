<div class="mt-4">
  <h3>Đăng khoá học</h3>
  <div class="add-course-body">
    <form method="POST" action="/courses/store">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Tên khoá học"
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="10"
          class="form-control"
          placeholder="Mô tả khoá học"
        ></textarea>
      </div>
      <div class="form-group">
        <label for="videoId">Video ID</label>
        <input
          type="text"
          class="form-control"
          name="videoId"
          id="videoId"
          placeholder="Mã video khoá học"
        />
      </div>
      <div class="form-group">
        <label for="level">Level</label>
        <input
          type="text"
          class="form-control"
          name="level"
          id="level"
          placeholder="Cấp độ khoá học"
        />
      </div>
      <button type="submit" class="btn btn-primary mt-2 py-2 px-2">Thêm khoá học</button>
    </form>
  </div>
</div>