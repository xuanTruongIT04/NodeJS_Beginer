<div class="mt-4">
  <h3>Cập nhật khoá học</h3>
  <div class="add-course-body">
    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
      <div class="form-group">
        <label for="name">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          value="{{course.name}}"
          name="name"
          placeholder="Tên khoá học"
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="6"
          class="form-control"
          placeholder="Mô tả khoá học"
        >{{course.description}}</textarea>
      </div>
      <div class="form-group">
        <label for="videoId">Video ID</label>
        <input
          type="text"
          class="form-control"
          name="videoId"
          id="videoId"
          value="{{course.videoId}}"
          placeholder="Mã video khoá học"
        />
      </div>
      <div class="form-group">
        <label for="level">Level</label>
        <input
          type="text"
          class="form-control"
          name="level"
          id="level"
          value="{{course.level}}"
          placeholder="Cấp độ khoá học"
        />
      </div>
      <button type="submit" class="btn btn-primary mt-2 py-2 px-2">Cập nhật</button>
    </form>
  </div>
</div>